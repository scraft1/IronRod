@model List<Topic>

<h3>Topics</h3>

@foreach (var topic in Model)
{
    <a asp-action="Detail" asp-route-id="@topic.ID">@topic.Title</a><br>
}

<br>
<form asp-controller="Topic" asp-action="Create" method="post">
    <input name="title" size="35" required/>
    <input type="submit" value="Create Topic" />
</form> 

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
